<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/main_about"
        android:gravity="center|center_vertical"
        android:text="@string/app_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/main_large_font" />

    <Button
        android:id="@+id/main_about"
        android:layout_width="@dimen/main_about_width"
        android:layout_height="@dimen/main_about_height"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/textView1"
        android:text="@string/main_about" />

</RelativeLayout>